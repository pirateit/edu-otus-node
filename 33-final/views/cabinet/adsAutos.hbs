{{> header }}
{{> navCabinet }}

			<section class="ls ms section_padding_top_50 section_padding_bottom_50 columns_padding_5">
				<div class="container-fluid">

					<div class="row">
						<div class="col-md-12">
							<h3>{{ title }}</h3>
						</div>
						<!-- .col-* -->
					</div>
					<!-- .row -->

					<div class="row">
						<div class="col-xs-12">
							<div class="with_background with_padding">

								<div class="row admin-table-filters">
									<div class="col-lg-9">

										<form action="./" class="form-inline filters-form">
											<span>
												<label class="grey" for="orderby">Сортировать по:</label>
												<select class="form-control orderby" name="orderby" id="orderby">
													<option value="date" selected>Дате создания</option>
													<option value="price">Цене</option>
												</select>
											</span>

											<span>
												<label class="grey" for="showcount">Показать по:</label>
												<select class="form-control showcount" name="showcount" id="showcount">
													<option value="10" selected>10</option>
													<option value="20">20</option>
													<option value="30">30</option>
													<option value="50">50</option>
													<option value="100">100</option>
												</select>
											</span>
										</form>

									</div>

									{{!-- <div class="col-lg-3 text-lg-right">
										<div class="widget widget_search">

											<form method="get" class="searchform form-inline" action="./">
												<div class="form-group">
													<label class="screen-reader-text" for="widget-search">Search for:</label>
													<input id="widget-search" type="text" value="" name="search" class="form-control" placeholder="Search Keyword">
												</div>
												<button type="submit" class="theme_button">Search</button>
											</form>
										</div>

									</div> --}}

								</div>

								<hr>

								<div class="table-responsive">
									<table class="table table-striped">
										<tr>
											<td class="media-middle text-center">
												<input type="checkbox">
											</td>
											<th>Название:</th>
											<th>Цена:</th>
											<th>Категория:</th>
											<th>Статус:</th>
										</tr>

                    {{#each ads.autos}}
										<tr class="item-editable">
											<td class="media-middle text-center">
												<input type="checkbox">
											</td>
											<td>
												<div class="media">
													<div class="media-left media-middle">
														<img src="/uploads/ads/{{this.id}}/{{this.photo}}" alt="Фото">
													</div>
													<div class="media-body media-middle">
														<h5>
															<a href="/my/cabinet/ads/{{ this.id }}/edit">{{#if this.title}}{{this.title}}{{else}}{{this.car.brand}} {{this.car.model}} {{this.year}}{{/if}}</a>
														</h5>
                            &lt;<a href="/my/cabinet/ads/{{ this.id }}/edit">Редактировать</a>&gt;
													</div>
												</div>
											</td>
											<td class="media-middle">
												<strong>
													{{this.price}}
												</strong>
											</td>
											<td class="media-middle">
												{{this.category.title}}
											</td>
											<td class="media-middle">
												{{#if this.is_active}}Опубликовано{{else}}Не опубликовано{{/if}}
											</td>
										</tr>
                    {{/each}}

									</table>
								</div>
								<!-- .table-responsive -->
							</div>
							<!-- .with_background -->
						</div>
						<!-- .col-* -->
					</div>
					<!-- .row -->
					<div class="row">
						<div class="col-sm-12">
							<div class="row">
								<div class="col-md-6">
									<ul class="pagination">
										<li>
											<a href="javascript:void(0);">
												<span class="sr-only">Prev</span>
												<i class="fa  fa-angle-left"></i>
											</a>
										</li>
										<li class="active">
											<a href="javascript:void(0);">1</a>
										</li>
										<li>
											<a href="javascript:void(0);">2</a>
										</li>
										<li>
											<a href="javascript:void(0);">3</a>
										</li>
										<li>
											<a href="javascript:void(0);">4</a>
										</li>
										<li>
											<a href="javascript:void(0);">
												<span class="sr-only">Next</span>
												<i class="fa fa-angle-right"></i>
											</a>
										</li>
									</ul>
								</div>
								<div class="col-md-6 text-md-right">
									Показано - to - из {{ads.count}}
								</div>
							</div>
						</div>
					</div>
					<!-- .row main columns -->
				</div>
