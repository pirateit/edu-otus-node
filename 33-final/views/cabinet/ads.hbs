{{> header }}
{{> navCabinet }}

<section class="ls ms section_padding_top_50 section_padding_bottom_50 columns_padding_5">
  <div class="container-fluid">

    <div class="row">
      <div class="col-md-12">
        <h3>{{ title }}</h3>
      </div>
      <!-- .col-* -->
    </div>
    <!-- .row -->

    <div class="row">
      <div class="col-xs-12">
        <div class="with_background with_padding">
          <h4>Последние объявления</h4>
          <ul class="nav nav-tabs" role="tablist">
            <li class="active">
              <a href="#autos" role="tab" data-toggle="tab">Авто</a>
            </li>
            <li>
              <a href="#parts" role="tab" data-toggle="tab">Запчасти</a>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade in active" id="autos">
              {{#if ads.autos}}
              <div class="table-responsive">
                <table class="table table-striped">
                  <tr>
                    <td class="media-middle text-center">
                      <input type="checkbox">
                    </td>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Статус</th>
                  </tr>

                  {{#each ads.autos}}
                  <tr class="item-editable">
                    <td class="media-middle text-center">
                      <input type="checkbox">
                    </td>
                    <td>
                      <div class="media">
                        <div class="media-left media-middle">
                          <img src="/uploads/ads/{{this.id}}-{{this.car_id}}/{{this.photo}}" alt="Фото">
                        </div>
                        <div class="media-body media-middle">
                          <h5>
                            <a href="/my/cabinet/ads/edit/{{this.id}}-{{this.car_id}}">{{#if
                              this.title}}{{this.title}}{{else}}{{this.car.brand}} {{this.car.model}}
                              {{this.year}}{{/if}}</a>
                          </h5>
                          &lt;<a href="/my/cabinet/ads/edit/{{this.id}}-{{this.car_id}}">Редактировать</a>&gt;
                        </div>
                      </div>
                    </td>
                    <td class="media-middle">
                      <strong>
                        {{this.price}}
                      </strong>
                    </td>
                    <td class="media-middle">
                      {{#if this.is_active}}Опубликовано{{else}}Не опубликовано{{/if}}
                    </td>
                  </tr>
                  {{/each}}

                </table>
              </div>
              {{else}}
              <div class="alert alert-info" role="alert">
								Вы ещё не создавали объявления в этой категории.
							</div>
              {{/if}}
            </div>
            <div class="tab-pane fade" id="parts">
              {{#if ads.parts}}
              <div class="table-responsive">
                <table class="table table-striped">
                  <tr>
                    <td class="media-middle text-center">
                      <input type="checkbox">
                    </td>
                    <th>Название:</th>
                    <th>Цена:</th>
                    <th>Категория:</th>
                    <th>Статус:</th>
                  </tr>

                  {{#each ads.parts}}
                  <tr class="item-editable">
                    <td class="media-middle text-center">
                      <input type="checkbox">
                    </td>
                    <td>
                      <div class="media">
                        <div class="media-left media-middle">
                          <img src="/uploads/ads/{{this.id}}-{{this.car_id}}/{{this.photo}}" alt="Фото">
                        </div>
                        <div class="media-body media-middle">
                          <h5>
                            <a href="/my/cabinet/ads/edit/{{ this.id }}">{{#if
                              this.title}}{{this.title}}{{else}}{{this.car.brand}} {{this.car.model}}
                              {{this.year}}{{/if}}</a>
                          </h5>
                          &lt;<a href="/my/cabinet/ads/edit/{{ this.id }}">Редактировать</a>&gt;
                        </div>
                      </div>
                    </td>
                    <td class="media-middle">
                      <strong>
                        {{this.price}}
                      </strong>
                    </td>
                    <td class="media-middle">
                      {{this.category.title}}
                    </td>
                    <td class="media-middle">
                      {{#if this.is_active}}Опубликовано{{else}}Не опубликовано{{/if}}
                    </td>
                  </tr>
                  {{/each}}
                </table>
              </div>
              {{else}}
              <div class="alert alert-info" role="alert">
								Вы ещё не создавали объявления в этой категории.
							</div>
              {{/if}}
            </div>
          </div>
        </div>
        <!-- .with_background -->
      </div>
      <!-- .col-* -->
    </div>
  </div>
  <!-- .container -->
</section>

<section class="ls">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        &copy; Copyrights 2017
      </div>
    </div>
  </div>
</section>

</div>
<!-- eof #box_wrapper -->
</div>
<!-- eof #canvas -->
<script src="/js/vendor/inputmask.min.js"></script>
<script src="/js/vendor/just-validate.production.min.js"></script>
<script src="/js/vendor/axios.min.js"></script>
<script src="/js/compressed.js"></script>
<script src="/js/vendor/Chart.bundle.min.js"></script>
<script src="/js/main.js"></script>
<script src="/js/autoclub.js"></script>
<script src="/js/admin-charts.js"></script>

</body>

</html>
