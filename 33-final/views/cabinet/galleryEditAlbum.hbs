{{> header }}
{{> navCabinet }}

<section class="ls ms section_padding_top_50 section_padding_bottom_50 columns_padding_5">
  <div class="container-fluid">

    <div class="row">
      <div class="col-sm-12">
        <h3>{{ title }}</h3>
      </div>
    </div>
    <!-- .row -->

    <form class="form-horizontal" action="#" id="form-gallery-album-edit">

      <div class="row">
        <div class="col-md-12">
          <div class="with_background with_padding">

            <h4>
              Введите данные
              <span class="pull-right">
                <button type="submit" class="theme_button small_button">Сохранить</button>
              </span>
            </h4>

            <hr>
            <div class="row form-group">
              <label class="col-lg-3 control-label">Дата мероприятия: </label>
              <div class="col-lg-9">
                <input type="date" class="form-control" id="event-date" name="event_date" value={{album.event_date}}>
              </div>
            </div>

            <div class="row form-group">
              <label class="col-lg-3 control-label">Название альбома: </label>
              <div class="col-lg-9">
                <input type="text" class="form-control" id="title" name="title" value={{album.title}}>
              </div>
            </div>

            <div class="row form-group">
              <label class="col-lg-3 control-label">Краткое описание: </label>
              <div class="col-lg-9">
                <textarea rows="5" class="form-control" id="description"
                  name="description">{{album.description}}</textarea>
              </div>
            </div>

            <div class="row form-group">
              <label class="col-lg-3 control-label">Категория:</label>
              <div class="col-lg-9">
                <select class="form-control" name="category" id="category">
                  {{#each categories}}
                  <option value={{ @index }} {{#if (eq @index ../album.category)}}selected{{/if}}>{{ this }}</option>
                  {{/each}}
                </select>
              </div>
            </div>

            <div class="row form-group">
              <label class="col-lg-3 control-label">Обложка: </label>
              <div class="col-sm-12">
                <div class="thumbnail">
                  <img src="/uploads/gallery/covers/{{album.cover}}" alt="">
                </div>
              </div>
              <div class="col-lg-9">
                <input type="file" class="form-control" id="cover" name="cover">
              </div>
            </div>

            <div class="col-sm-12" id="message-box"></div>

            <div class="row">
              <div class="col-sm-12 text-right">
                <input type="hidden" id="id" value={{album.id}}>
                <button type="submit" class="theme_button wide_button">Сохранить</button>
                <a href="/my/cabinet/gallery" class="theme_button inverse wide_button">Отменить</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>

    <div class="row">
      <div class="col-xs-12 col-md-6">
        <h4>Публикация</h4>
        <div class="with_background with_padding">
          <form action="#" id="form-gallery-album-status">
            <div class="form-group">
              <select class="form-control" name="is_active">
                <option value="true" {{#if (eq album.is_active true)}}selected{{/if}}>Опубликовано</option>
                <option value="false" {{#if (eq album.is_active false)}}selected{{/if}}>Не опубликовано</option>
              </select>
            </div>

            <div class="col-sm-12" id="message-box-status"></div>

            <button type="submit" class="theme_button">Обновить статус</button>
          </form>
        </div>
      </div>

      <div class="col-xs-12 col-md-6">
        <h4>Удаление</h4>
        <div class="with_background with_padding">
          <form action="#" id="form-gallery-album-delete">
            <div class="alert alert-warning" role="alert">
              <strong>Обратите внимание!</strong> После удаления альбома будут удалены все фото и данные.
            </div>

            <div class="col-sm-12" id="message-box-delete"></div>

            <button type="submit" class="btn btn-danger">Удалить</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="ls">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        &copy; Copyrights 2017
      </div>
    </div>
  </div>
</section>

</div>
<!-- eof #box_wrapper -->
</div>
<!-- eof #canvas -->
