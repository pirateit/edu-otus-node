html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="/css/normalize.css")
    link(rel="stylesheet", href="/css/style.css")
  body
    header.container
      .header
        a(href="/") Logo
        .header__menu
          a(href="/") Курсы
        .header__profile
          if user
            a(href="/my") Мой кабинет
            a(href="/logout")
              img(src="/img/icons/logout.svg", width="25", height="25", alt="Выход")
          else
            a(href="/login") Вход
            | &nbsp;/&nbsp;
            a(href="/signup") Регистрация
    .hero
      .hero__container.container
        h1= title
    block content
    .footer
    script(src="/js/axios.min.js")
    script(src="/js/main.js")
